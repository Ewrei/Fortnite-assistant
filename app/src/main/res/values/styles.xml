<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/text_color</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="header_color">@color/color_orange</item>

        <item name="android:windowBackground">@drawable/ic_background</item>

        <item name="colorSurface">@color/colorPrimary</item>
        <item name="background_dialog">@color/color_background_face_it</item>

        <item name="background_segment">@color/background_segment_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="materialAlertDialogTheme">@style/DefaultMaterialAlertDialog</item>

        <item name="default_button_text_color">@android:color/white</item>

        <item name="android:itemBackground">@color/colorPrimary</item>

        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent
        </item>

        <item name="cardViewStyle">@style/DefaultCard</item>

        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>

        <item name="android:statusBarColor">#000000</item>

    </style>

    <style name="ToolbarTitleText" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">

    </style>

    <style name="ToolbarSubTitleText" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">

    </style>

    <style name="DefaultCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/half_default_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_default_margin</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">@dimen/card_stroke_width</item>
    </style>

    <style name="DefaultMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/BaseMaterialDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BaseMaterialDialogBodyText</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_orange</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseMaterialDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="BaseMaterialDialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="DefaultBackgroundCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginLeft">@dimen/half_default_margin</item>
        <item name="android:layout_marginRight">@dimen/half_default_margin</item>
        <item name="android:layout_marginTop">@dimen/half_default_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_default_margin</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">25dp</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?default_button_text_color</item>
    </style>

    <style name="DefaultOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">25dp</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?default_button_text_color</item>
        <item name="strokeColor">@color/text_color</item>
    </style>

    <style name="DefaultTextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="DefaultSegmentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?header_color</item>
    </style>

    <style name="DefaultMediumSegmentText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultHeaderSegmentText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?header_color</item>
    </style>

    <style name="WeaponTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
        <item name="tabIndicatorColor">@color/color_orange</item>
        <item name="tabTextColor">@color/text_color</item>
        <item name="tabRippleColor">@color/color_orange</item>
    </style>

    <style name="DefaultDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_divider_height</item>
        <item name="android:background">@color/divider_light</item>
    </style>

    <style name="ToolbarIcon">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <style name="CustomOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/text_color</item>
        <item name="counterTextColor">@color/text_color</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultColorTabLayout" parent="@style/Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@android:color/white</item>
        <item name="chipBackgroundColor">@color/color_orange</item>
    </style>

</resources>